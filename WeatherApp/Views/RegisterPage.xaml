<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WeatherApp.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tools="clr-namespace:WeatherApp.Tools"
    Title="Register">
    <ContentPage.Resources>
        <tools:IsNotNullConverter x:Key="IsNotNullConverter" />
    </ContentPage.Resources>
    <VerticalStackLayout
        Padding="30"
        Spacing="20"
        VerticalOptions="Center">
        <Label
            FontSize="Title"
            HorizontalOptions="Center"
            Text="Register a New Account" />
        <Entry
            HorizontalOptions="FillAndExpand"
            Placeholder="First Name"
            Text="{Binding FirstName}" />
        <Entry
            HorizontalOptions="FillAndExpand"
            Placeholder="Last Name"
            Text="{Binding LastName}" />
        <Entry
            HorizontalOptions="FillAndExpand"
            Placeholder="Email"
            Text="{Binding Email}" />
        <Entry
            HorizontalOptions="FillAndExpand"
            IsPassword="True"
            Placeholder="Password"
            Text="{Binding Password}" />
        <Picker
            Title="Select Role"
            HorizontalOptions="FillAndExpand"
            ItemDisplayBinding="{Binding .}"
            ItemsSource="{Binding AvailableRoles}"
            SelectedItem="{Binding Role}" />
        <Label
            HorizontalOptions="Center"
            IsVisible="{Binding StatusMessage, Converter={StaticResource IsNotNullConverter}}"
            Text="{Binding StatusMessage}"
            TextColor="Red" />
        <Button
            Command="{Binding RegisterCommand}"
            HorizontalOptions="Center"
            Text="Register"
            WidthRequest="200" />
        <Button
            Command="{Binding NavigateBackCommand}"
            HorizontalOptions="Center"
            Text="Back"
            WidthRequest="200" />
    </VerticalStackLayout>
</ContentPage>